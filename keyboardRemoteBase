global key
InitKeyboard();

while 1 
  pause(0.1);
  switch key
    case 'uparrow'
      disp ('Up Arrow Pressed');

    case 'downarrow'
      disp('Down Arrow Pressed');

    case 'leftarrow'
      disp('Left Arrow Pressed');

    case 'rightarrow'
      disp('Right Arrow Pressed');

    case 'q' %press q to quit
      disp('Closing Connection');
      break;
  end
end
CloseKeybaord();
